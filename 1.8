  console.log('value now', newValue)
  setGood(newValue)
  }


  const title = ["give feedback", "statistics"]

  return (
  <div>
   
  <Header header={title[0]}/>

  <Button handleClick={() => setGood(good + 1)} text="good" />
  <Button handleClick={() => setNeutral(neutral +1)} text="neutral" />
  <Button handleClick={() => setBad(bad + 1)} text="bad" />

    <Header header={title[1]}/>

    <Stat text="Good" value={good} text2="Neutral" value2={neutral} text3="Bad" value3={bad} text4="All" value4={good + neutral + bad} text5="Average" value5={((good * 1)+ (neutral * 0) + (bad * -1)) / (good + neutral + bad)} text6="Positive" value6={((good) / (good + neutral + bad)) * 100}/>

