import { useState } from 'react'

const Header = (props) => {

  return (
    <div>
    <h1>{props.header}</h1>
    </div>
  )
}

const Button = (props) => (
    <button onClick={props.handleClick}>
      {props.text}
    </button>
)

const Stat = (props) => (
  <div>
    {props.text} {props.value}
    <br/>
    {props.text2} {props.value2}
    <br/>
    {props.text3} {props.value3}
  </div>
)

